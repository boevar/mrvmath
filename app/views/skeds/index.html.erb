<div align="center">
<h1>Class Schedules</h1>

<% form_tag skeds_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :code => nil %>
  </p>
<% end %>



<table border="1" cellpadding="0" cellspacing="0" width="90%" >
  <tr style="background-color:blue;color:white">
    <th colspan="2"></th>
	<th colspan="5">Mon-Wed-Fri</th>
	<th colspan="5">Tues-Thurs</th>
	<th colspan="2"></th>
  </tr>
  <tr style="background-color:blue;color:white">
    <th>Code</th>
    <th>Gr</th>
    <th>7:00-8:30</th>
    <th>8:31-10:01</th>
    <th>10:02-12:02</th>
    <th>1:04-2:34</th>
    <th>2:35-4:05</th>
    <th>7:00-8:30</th>
    <th>8:31-10:01</th>
    <th>10:02-12:02</th>
    <th>1:04-2:34</th>
    <th>2:35-4:05</th>
	<th colspan="2">Actions</th>
  </tr>

<% @skeds.each do |sked| %>
  <tr align="center">
    <td><%= sked.code %></td>
    <td><%= sked.gr %></td>
    <td><%= sked.m1 %></td>
    <td><%= sked.m2 %></td>
    <td><%= sked.m3 %></td>
    <td><%= sked.m4 %></td>
    <td><%= sked.m5 %></td>
    <td><%= sked.t1 %></td>
    <td><%= sked.t2 %></td>
    <td><%= sked.t3 %></td>
    <td><%= sked.t4 %></td>
    <td><%= sked.t5 %></td>
    
    <td><%= link_to 'Change', edit_sked_path(sked) %></td>
    <td><%= link_to 'Withdraw', sked, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Student', new_sked_path %>

<br />
<p><center>Designer/developer: Mr Vargas</center></p> 
</div>
